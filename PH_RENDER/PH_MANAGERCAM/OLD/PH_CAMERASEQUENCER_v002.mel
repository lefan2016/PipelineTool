global proc float [] floatArrayRemoveDuplicates(float $list[]){
                float $item, $results[];
                int $index = 0, $found;
                for ($item in $list){
                    $found = 0;
                    for ($result in $results)
                        if ($result == $item)
                            $found = 1;
                    if (!$found)
                        $results[$index++] = $item;
                }
                return $results;
}

